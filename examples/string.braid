-* common string operations *-

def main(argv: [string]) -> () {
	let name = argv[1];

	let greet1 = "hello " ++ name;
	let greet2 = fmt("hello {}")([name]);

	let user_input : option<int> = parse_int(argv[2]);

	let greet3 = match user_input {
		none -> "not a valid numeric value",
		some(\num) -> fmt("hello {}, {} is my favourite number")([name, num]),
	};

	echo(join("\n")([greet1, greet2, greet3]));
}
