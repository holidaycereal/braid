type time = i64;
type point = (int, int);

union level { off | low | high }
union maybe[a] { nothing | just(a) }

record point3 { x : int ^ y : int ^ z : int }

record user {
	^ id : u8
	^ name : string
	^ status {
		| inactive
		| active { time_joined : time }
	}
}

alice : user = {
	^ id = 0x01
	^ name = "alice"
	^ status = active { time_joined = os::now() }
};

bob : user = (0x02, "bob", inactive);
